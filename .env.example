# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Books API
NEXT_PUBLIC_GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Open Library API (no key required, but rate limiting applies)
NEXT_PUBLIC_OPEN_LIBRARY_BASE_URL=https://openlibrary.org

# YouTube API (optional, for enhanced audiobook integration)
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Fantasy Tome Keeper"

# File Upload Configuration
MAX_FILE_SIZE=50000000  # 50MB for audiobook files
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp4,audio/wav,audio/ogg
